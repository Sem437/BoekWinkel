@model BoekWinkel.Models.BoekModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section boekmodelStyleEditPage
{
    <link rel="stylesheet" href="~/css/BoekModel/details.css" />
}


<div class="containerDetailsBoekModel">
    <h1>Details</h1>
    <div>
        <dt>
            @Html.DisplayNameFor(model => model.BoekTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoekTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoekAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoekAuthor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoekDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoekDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoekPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoekPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BoekCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoekCategory)
        </dd>     
    </div>
    <div>
        <a asp-action="Index">
            <ion-icon name="arrow-back-outline" class="Icon"></ion-icon>
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.BoekId">
            <ion-icon name="create-outline" class="Icon"></ion-icon>
        </a>
    </div>
</div>